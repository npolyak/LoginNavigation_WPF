<UserControl x:Class="WK23012_Main.Views.ModuleViews.numericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WK23012_Main.Views.ModuleViews"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="100">

    <StackPanel Orientation="Horizontal" Background="{DynamicResource color11}">
        <Button Content="▲" Width="30" Height="30" FontSize="14" Background="{DynamicResource color11}" Foreground="White" BorderBrush="{DynamicResource color11}" BorderThickness="1" Click="IncreaseValue"/>
        <TextBox x:Name="NumericTextBox" Width="40" Text="0" TextAlignment="Center" FontSize="14" VerticalContentAlignment="Center" Background="{DynamicResource titleColor1}" Foreground="Black"/>
        <Button Content="▼" Width="30" Height="30" FontSize="14" Background="{DynamicResource color11}" Foreground="White" BorderBrush="{DynamicResource color11}" BorderThickness="1" Click="DecreaseValue"/>
    </StackPanel>
</UserControl>
