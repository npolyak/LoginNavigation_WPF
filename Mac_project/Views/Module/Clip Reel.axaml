<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:styles="clr-namespace:Material.Styles;assembly=Material.Styles"
			 xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             x:Class="Mac_project.Views.Module.Clip_Reel">

	<controls:Card>
		<StackPanel Orientation="Vertical" Margin="10, 5">
			<StackPanel.Styles>
				<Style Selector="StackPanel > TextBlock">
					<Setter Property="VerticalAlignment" Value="Bottom" />
				</Style>
			</StackPanel.Styles>
			
			<StackPanel Height="1" Background="Gray" Opacity="0.1" Margin="0,0,0,5" />
			<TextBlock Classes="Headline6" Text="Clip Reel" Margin="0,0,0,5"/>
			<TextBlock Classes="Subtitle1" Text="Delay Reel"/>

			<StackPanel Orientation="Horizontal">
				<StackPanel Orientation="Vertical">

					<StackPanel Orientation="Horizontal"  Margin="0,10,0,0" VerticalAlignment="Center">
						<TextBlock Classes="body1" Text="After Reel Start: " VerticalAlignment="Center" />
						<NumericUpDown Value="0.5" Increment="0.05" FormatString="0.00" Minimum="0" Maximum="1" Width="100" Height="35"/>
					</StackPanel>
					<StackPanel Orientation="Horizontal"  Margin="0,10,0,0" VerticalAlignment="Center">
						<TextBlock Classes="body1" Text="msec:" VerticalAlignment="Center" Margin="10 0 0 0"/>
						<Slider Name="reelstart"
								Value="0"
								Minimum="0"
								Maximum="4"
								TickPlacement="BottomRight"
								IsSnapToTickEnabled="True"
								Ticks="1,2,3,4"
								Width="100"
								Margin="30 0 0 0"/>
					</StackPanel>
					<StackPanel Orientation="Horizontal"  Margin="0,30,0,0" VerticalAlignment="Center">
						<TextBlock Classes="body1" Text="After Reel Stop: " VerticalAlignment="Center" />
						<NumericUpDown Value="0.5" Increment="0.05" FormatString="0.00" Minimum="0" Maximum="1" Width="100" Height="35"/>
					</StackPanel>
					<StackPanel Orientation="Horizontal"  Margin="0,10,0,0" VerticalAlignment="Center">
						<TextBlock Classes="body1" Text="msec:" VerticalAlignment="Center" Margin="10 0 0 0"/>
						<Slider Name="reelstop"
								Value="0"
								Minimum="0"
								Maximum="4"
								TickPlacement="BottomRight"
								IsSnapToTickEnabled="True"
								Ticks="1,2,3,4"
								Width="100"
								Margin="30 0 0 0"/>
					</StackPanel>
				</StackPanel>
				
				<StackPanel Orientation="Vertical" Margin="20,0,0,0" VerticalAlignment="Center">
					<TextBlock Classes="Subtitle1" Text="Execute" Margin="0, -20, 0, 0" VerticalAlignment="Top"/>
					<StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
						<Button Content="Initialize" Margin="0,5,0,0" Background="#338DF0" Width="120" />
					</StackPanel>
					<StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
						<Button Content="Load" Margin="0,5,0,0" Background="#338DF0" Width="120" />
					</StackPanel>
					<StackPanel Orientation="Horizontal"  Margin="0,10,0,0">
						<Button Content="Save" Margin="0,5,0,0" Background="#338DF0" Width="120" />
					</StackPanel>

					<StackPanel Orientation="Vertical" Margin="0 20 0 0">
						<TextBlock Classes="Subtitle1" Text="Status" VerticalAlignment="Center" />
						<StackPanel Orientation="Vertical"  Margin="0,10,0,0">
							<CheckBox IsChecked="True">Start Sensor</CheckBox>
						</StackPanel>
						<StackPanel Orientation="Vertical"  Margin="0,10,0,0">
							<CheckBox IsChecked="True">Stop Sensor</CheckBox>
						</StackPanel>
					</StackPanel>
				</StackPanel>
			</StackPanel>

		</StackPanel>
	</controls:Card>
</UserControl>
